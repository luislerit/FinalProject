void five()
{

      char let;
      
      
     printf("Passing rate: \n");
     printf("\n A. 50 \n");
     printf("\n B. 55 \n");
     printf("\n C. 60 \n");
     
     printf("\nEnter Choice: \n");
     
     while(1)
     {
    scanf("%c",&let);
    
    
              switch(let)
              {
                         case 'A':
                         case 'a':
                              system("cls");
                              fivecasea();
                              getchar();
                              break;
                         case 'B':
                         case 'b':
                              system("cls");
                              fivecaseb();
                              getchar();
                              break;
                         case 'C':
                         case 'c':
                              system("cls");
                              fivecasec();
                              getchar();
                              break;
                              
                       
                              }
     }
}
