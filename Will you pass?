void fourcasea()
{   
    float a,b,c,x;
    float d,e,f,g,y;
    float h,i,z;
    float j,k;
    
     
    printf("\nEnter desired Final Grade: ");
    scanf("%f",&a);
    printf("\nEnter Quiz Percentage: ");
    scanf("%f",&b);
    printf("\nEnter Output Percentage: ");
    scanf("%f",&c);
    
    printf("\nEnter Quiz 1 Grade: ");
